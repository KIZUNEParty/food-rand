<?xml version='1.0' encoding='utf-8'?>
<widget id="th.suphakit.foodrand" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <icon src="res/logo.png" />
    <name>Food-RAND</name>
    <description>
        Easiest way to find a menu for your fastest meal!!
    </description>
    <author email="contact@detzz.in.th" href="http://detzz.in.th">
        Suphakit P.
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
